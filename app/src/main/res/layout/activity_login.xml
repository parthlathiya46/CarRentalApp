<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texts"
        android:layout_alignBaseline="@+id/Email"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="34dp"
        android:text="Email:-"
        android:textSize="20dp"
        android:textColor="#ff0000"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="121dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp" />

    <TextView

        android:textColor="#ff0f00"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/texts"
        android:layout_marginTop="189dp"
        android:text="Password:-"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/texts" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text"
        android:layout_alignStart="@+id/Email"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_alignLeft="@+id/Email" />

    <Button
        android:id="@+id/Loginbutton"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="195dp"
        android:text="LOgin" />

    <TextView
        android:id="@+id/Signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp"
        android:textColor="@color/colorPrimary"
        android:text="Not have account? SignUp here" />

    <TextView
        android:id="@+id/textView"
        android:text="User Login"
        android:textSize="23dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />


</RelativeLayout>